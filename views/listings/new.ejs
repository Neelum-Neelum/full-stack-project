<% layout("/layouts/boilerplate.ejs") %> <br />
<br />
<h3 class="col-8 offset-2">create a new Listing</h3>
<div class="row">
  <div class="col-8 offset-2">
    <form method="POST" action="/listings" 
    novalidate class="needs-validation" 
    enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <textarea
          rows="1"
          name="newList[title]"
          placeholder="Enter title"
          type="text"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="newList[description]"
          placeholder="Enter description"
          type="text"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>


      <div class="mb-3">
        <label for="image" class="form-label">upload listing image</label>
        <input
          name="newList[image]"
          type="file"
          class="form-control"
        />
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <textarea
          rows="1"
          name="newList[price]"
          placeholder="Enter price"
          type="text"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter price</div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <textarea
          rows="1"
          name="newList[country]"
          placeholder="Enter country"
          type="text"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter country name</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <textarea
          rows="1"
          name="newList[location]"
          placeholder="Enter location"
          type="text"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <br />
      <button class="btn btn-dark mb-3 add-btn">Add</button>
    </form>
  </div>
</div>

<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login on WanderLust</h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/login" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="username">Username:-</label>
                <input class="form-control" type="text" name="username" id="username" placeholder="enter username" required>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="password">Password:-</label>
                <input class="form-control" type="password" name="password" id="password" placeholder="enter password" required> 
            </div>
            <br>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>